#!/usr/bin/env bash
# Configures an Ubuntu machine to install and serve a default page with "Holberton School"

set -euo pipefail

# Install nginx (auto-yes)
apt-get update -y
apt-get install -y nginx

# Make sure nginx listens on port 80 (default on Ubuntu, but keep it explicit)
if ! grep -Rqs "listen 80" /etc/nginx/sites-enabled/; then
  sed -i 's/listen \[::\]:80 default_server;/listen [::]:80 default_server;/' /etc/nginx/sites-available/default
  sed -i 's/listen 80 default_server;/listen 80 default_server;/' /etc/nginx/sites-available/default
fi

# Create the required content at the web root
echo "Holberton School for the win!" > /var/www/html/index.html

# Restart nginx without systemctl
service nginx restart
