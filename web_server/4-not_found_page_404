#!/usr/bin/env bash
# Install nginx and configure a custom 404 page

apt-get update -y
apt-get install -y nginx

ufw allow 80/tcp >/dev/null 2>&1 || true

echo "Ceci n'est pas une page" > /usr/share/nginx/html/404.html

CONF="/etc/nginx/sites-enabled/default"

# Add config only once
if ! grep -q "error_page 404" "$CONF"; then
  sed -i '/listen 80 default_server;/a \
\terror_page 404 /404.html;\n\tlocation = /404.html {\n\t\troot /usr/share/nginx/html;\n\t\tinternal;\n\t}\n' "$CONF"
fi

nginx -t
service nginx start
service nginx restart
