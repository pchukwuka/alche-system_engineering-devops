#!/usr/bin/env bash
# Make nginx listen on port 80 on all IPv4 addresses
sed -i 's/listen 127.0.0.1:80;/listen 0.0.0.0:80;/' /etc/nginx/sites-available/default
sed -i 's/listen 80 default_server;/listen 0.0.0.0:80 default_server;/' /etc/nginx/sites-available/default
sed -i 's/listen 80;/listen 0.0.0.0:80;/' /etc/nginx/sites-available/default
nginx -t && (service nginx restart || /etc/init.d/nginx restart)
